<Window x:Class="WpfApp7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="173*"/>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="23*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Сервер" HorizontalAlignment="Center" Margin="10" Grid.Row="0"/>
        <TextBlock Text="Сообщения:" HorizontalAlignment="Center" Margin="10" Grid.Row="1"/>
        <ListBox Grid.Row="2" x:Name="MessageLbx"/>
        <TextBox Grid.Row="3" x:Name="TextTbx"/>
        <Button Content="Отправить" Grid.Row="4" Click="Send_Click"/>
    </Grid>
</Window>
